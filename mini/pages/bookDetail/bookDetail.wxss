/* pages/book-detail/book-detail.wxss */
.book-detail-page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book-img {
  width: 100%;
  height: 220px;
}

.book-detail {
  margin: 20px;
}

.detail-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 5px;
  border-color: black;

}

.title {
  background-color: #ffecb3;
  font-family: 'Times New Roman', Times, serif;  
  font-size: 18px;
  font-weight: 15px;
}

.info {
  margin-left: 10px;
  font-family: 'Times New Roman', Times, serif;  
  font-size: 15px;
  font-weight: 12px;
}

.mini-btn{
  margin-right: 20rpx;
  background-color: #7986cb;
  font-family: 'Times New Roman', Times, serif;  
  font-size: 15px;
  font-weight: 8px;
}